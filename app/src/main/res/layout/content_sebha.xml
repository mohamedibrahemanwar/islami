<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_sebha">

    <ImageView
        android:id="@+id/sebha_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/sebha_imagee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sebha_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="عدد التسبيحات"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@id/sebha_image"
        app:layout_constraintStart_toStartOf="@id/sebha_image"
        app:layout_constraintTop_toBottomOf="@id/sebha_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sebha_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/style"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/sebha_title"
        app:layout_constraintStart_toStartOf="@id/sebha_title"
        app:layout_constraintTop_toBottomOf="@id/sebha_title"
        tools:text="30" />

    <TextView
        android:id="@+id/sebha_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/style"
        android:padding="15dp"
        android:text="سبحان الله"
        android:textColor="@color/black"
        android:textSize="25sp"

        app:layout_constraintEnd_toEndOf="@id/sebha_count"
        app:layout_constraintStart_toStartOf="@id/sebha_count"
        app:layout_constraintTop_toBottomOf="@id/sebha_count" />

</androidx.constraintlayout.widget.ConstraintLayout>