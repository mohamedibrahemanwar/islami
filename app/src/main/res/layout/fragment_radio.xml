<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:background="@drawable/main_background">

    <ImageView
        android:id="@+id/radio_image"
        android:layout_width="412dp"
        android:layout_height="222dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/radio_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="إذاعة القرآن الكريم"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_image" />

    <ImageView
        android:id="@+id/radio_bar"
        android:layout_width="218dp"
        android:layout_height="36dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/radio_var"
        app:layout_constraintEnd_toEndOf="@id/txt_radio"
        app:layout_constraintStart_toStartOf="@id/txt_radio"
        app:layout_constraintTop_toBottomOf="@id/txt_radio" />
</androidx.constraintlayout.widget.ConstraintLayout>